{
  "name": "GojiLabsTask",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "react-native start --reset-cache",
    "pods": "cd ios && pod install --repo-update",
    "android": "react-native run-android --mode=debug --terminal terminal",
    "android-release": "react-native run-android --mode=release --terminal terminal",
    "ios": "npx react-native run-ios --mode Debug --terminal terminal",
    "ios-release": "npx react-native run-ios --mode Release --terminal terminal",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --fix --report-unused-disable-directives --max-warnings 0",
    "format": "prettier ./src --write",
    "tsc": "tsc --noEmit --module esnext",
    "clean-android": "cd android && ./gradlew clean",
    "test": "jest",
    "prepare": "husky",
    "server-start": "json-server --watch db.json --port 3001"
  },
  "dependencies": {
    "@react-navigation/native": "^7.1.10",
    "@react-navigation/native-stack": "^7.3.14",
    "@tanstack/react-query": "^5.80.6",
    "await-to-js": "^3.0.0",
    "axios": "^1.9.0",
    "react": "19.0.0",
    "react-native": "0.79.3",
    "react-native-config": "^1.5.5",
    "react-native-device-info": "^14.0.4",
    "react-native-safe-area-context": "^5.4.1",
    "react-native-screens": "^4.11.1",
    "react-native-svg": "^15.12.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.3",
    "@react-native/eslint-config": "0.79.3",
    "@react-native/metro-config": "0.79.3",
    "@react-native/typescript-config": "0.79.3",
    "@tanstack/eslint-plugin-query": "^5.78.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.6.3",
    "json-server": "^1.0.0-beta.3",
    "prettier": "2.8.8",
    "react-native-svg-transformer": "^1.5.1",
    "react-test-renderer": "19.0.0",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "*.{ts,json,tsx,js,jsx}": "npm run format",
    "*.{ts,tsx,js,jsx}": "npm run lint:fix"
  },
  "engines": {
    "node": ">=18"
  }
}
